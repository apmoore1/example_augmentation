{
  "dataset_reader": {
    "type": "target_dataset",
    "token_indexers": {
      "elmo": {
        "type": "elmo_characters"
      }
  }
  },
  "model": {
    "type": "interactive_attention_target_classifier",
    "text_field_embedder": {
      "token_embedders": {
        "elmo": {
          "type": "bidirectional_lm_token_embedder",
          "archive_file": "../amazon_language_model_save_large/model.tar.gz",
          "bos_eos_tokens": ["<S>", "</S>"],
          "remove_bos_eos": true,
          "requires_grad": false
        }
      }
    },
    "target_field_embedder": {
      "token_embedders": {
        "elmo": {
          "type": "bidirectional_lm_token_embedder",
          "archive_file": "../amazon_language_model_save_large/model.tar.gz",
          "bos_eos_tokens": ["<S>", "</S>"],
          "remove_bos_eos": true,
          "requires_grad": false
        }
      }
    },
    "text_encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 1024,
      "hidden_size": 300,
      "num_layers": 1,
      "dropout": 0.0
    },
    "target_encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 1024,
      "hidden_size": 300,
      "num_layers": 1,
      "dropout": 0.0
    },
    "dropout": 0.5,
    "word_dropout": 0.0
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },

  "trainer": {
    "num_epochs": 100,
    "patience": 5,
    "cuda_device": 0,
    "shuffle": true,
    "validation_metric": "+accuracy",
    "optimizer": {
        "type": "adam"
    }
  }
}