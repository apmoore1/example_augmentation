{
  "dataset_reader": {
    "type": "tdlstm_dataset",
    "incl_target": true,
    "token_indexers": {
      "elmo": {
        "type": "elmo_characters"
      }
  }
  },
  "model": {
    "type": "tdlstm_classifier",
    "text_field_embedder": {
      "token_embedders": {
        "elmo": {
          "type": "bidirectional_lm_token_embedder",
          "archive_file": "../transformer-elmo-2019.01.10.tar.gz",
          "bos_eos_tokens": ["<S>", "</S>"],
          "remove_bos_eos": true,
          "requires_grad": false
        }
          
      }
    },
    "left_text_encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 1024,
      "hidden_size": 300,
      "num_layers": 1
    },
    "right_text_encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 1024,
      "hidden_size": 300,
      "num_layers": 1
    },
  "dropout": 0.5
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },

  "trainer": {
    "num_epochs": 100,
    "patience": 5,
    "cuda_device": 0,
    "shuffle": true,
    "validation_metric": "+accuracy",
    "optimizer": {
        "type": "adam"
    }
  }
}