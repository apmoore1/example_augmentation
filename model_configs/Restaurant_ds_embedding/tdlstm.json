{
  "dataset_reader": {
    "type": "tdlstm_dataset",
    "incl_target": true,
    "token_indexers": {
      "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
      }
    }
  },
  "model": {
    "type": "tdlstm_classifier",
    "text_field_embedder": {
      "token_embedders": {
          "tokens": {
              "type": "embedding",
              "embedding_dim": 300,
              "pretrained_file": "./embeddings/yelp/ds_embedding.txt",
              "trainable": true
          }
          
      }
    },
    "left_text_encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 300,
      "hidden_size": 300,
      "num_layers": 1
    },
    "right_text_encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 300,
      "hidden_size": 300,
      "num_layers": 1
    },
  "dropout": 0.5
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },

  "trainer": {
    "num_epochs": 100,
    "patience": 5,
    "cuda_device": 0,
    "shuffle": true,
    "validation_metric": "+accuracy",
    "optimizer": {
        "type": "adam"
    }
  }
}